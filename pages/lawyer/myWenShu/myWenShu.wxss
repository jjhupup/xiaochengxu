/* pages/lawyer/myWenShu/myWenShu.wxss */
.headBar {
  background-color: #fff;
  width: 100%;
}
.headBar .tabnav{
  height: 50px;
  width: 425px;
  display: flex;
  flex-direction:row;
}

.topitem {
  width: 85px;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
}

.active {
  color: #5677FC;
  position: relative;
}

.active::after {
  content: "";
  position: absolute;
  width: 60%;
  height: 2px;
  background-color: #5677FC;
  bottom: 0;
  left: 20%;
}
.item {
  padding: 0 30rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 10px;
  box-shadow: 8px 4px 8px #ddd;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  color: #abb4bf;
}

.name {
  display: flex;
  align-items: center;
  color: #333;
}

.header .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .text {
  flex: 1;
}

.content .img {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx;
}

.content .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.content .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #abb4bf;
}

.label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}

.label image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-top: 3px;
}

.footer {
  display: flex;
  align-items: center;
  height: 80rpx;
  justify-content: space-between;
}

.hover-class, .navigator-hover {
  background: #f2f2f2 !important;
}
.upload{
padding: 6px 9px;
background-color: #5677fc;
color: #fff;

}
.showErr{
  color: #ff4202;
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 50px;
}
.showErr image{
  width: 100px;
  height: 100px;
  margin-top: 100px;
}