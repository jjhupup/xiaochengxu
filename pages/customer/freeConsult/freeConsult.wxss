/* pages/freeConsult/freeConsult.wxss */

page{
  padding: 10px 16px;

}
.topBar {
  width: 100%;
  display: flex;
  margin-top: 20px;
}



.pickerLeft {
  height: 36px;
  line-height: 36px;
  font-size: 18px;
  position: relative;
  margin-left: 10px;
}

.pickerLeft::after {
  content: '';
  position: absolute;
  left: -10px;
  top: 9px;
  width: 3px;
  height: 54%;
  background-color: #404040;
}

.pickerRight {
  width: 100%;
  line-height: 36px;
  height: 36px;
  text-indent: 14px;
  border: 1px solid #ccc;
  border-radius: 4px;
  position: relative;
  color: #1e1e1e;
  margin-top: 10px;
}

.pickerRight image {
  position: absolute;
  height: 26px;
  width: 20px;
  right: 4px;
  top: 4px;
}
.title{
  width: 90%;
height: 70px;
margin: auto;
border: 1px solid #ccc;

}