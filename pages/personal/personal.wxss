/* pages/personal/personal.wxss */
page{
  background-color: #f3f3f3;
}
.content{
  padding: 10px;
}
.content image{
  width: 120px;
  height: 120px;
  border-radius: 50%;
  margin-top: -60px;
}
.top{
  width: 100%;
  height: 186px;
  /* border: 1px solid #aaa; */
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 55px;
}
.name{
  font-size: 20px;
  line-height: 32px;
}
.dizi{
  font: 16px;
  color: #666;
}
.dizi text{
  margin: 10px;
  line-height: 32px;
}
.desc{
  display: flex;
  width: 94%;
  height: 54px;
  margin: auto;
  border-top: 1px solid #f3f3f3;
}
.desc>view{
  width: 50%;
  height: 54px;
  text-align: center;
  position: relative;
}
.desc>view::after{
  content: '';
  position: absolute;
  top: 13px;
  right: 0px;
  width: 1px;
  height: 50%;
  background-color: #eee;
}
.desc text{
  display: block;
  height: 50%;
  font-size: 14px;
}
.desc text:nth-child(1){
  line-height: 36px;
  color: #333;
}
.desc text:nth-child(2){
  line-height: 20px;
  color: #aaa;
}
.lsdangan{
  background-color: #fff;
  width: 100%;
  margin-top: 20px;
}
.title2{
  font-size: 18px;
  line-height: 40px;

  padding-left: 10px;
}
.datalist{
  display: flex;
}
.ltitle{
  font-size: 15px;
  color: #aaa;
  width: 22%;
  padding-left: 10px;
  line-height: 28px;
}
.rcontent{
  flex: 1;
  display:  flex;
  flex-wrap: wrap;
}
.rcontent view{
  padding: 3px 7px;
  margin: 2px 4px;
  background-color: #efefef;
  color: #000;
  text-align: center;
  border-radius: 30px;
}
.r{
  flex: 1;
  font-size: 15px;
  line-height: 28px;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.Rzheng{
  display: flex;
  background-color: #fff;
  line-height: 36px;
}
.Rzheng>view{
  padding-left: 12px;
  font-size: 14px;
  color: #aaa;
}
.Rzheng icon{
  vertical-align: middle;
  margin-right: 4px;
  margin-top: 16px;
}