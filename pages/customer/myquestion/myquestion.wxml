<!--pages/customer/myquestion/myquestion.wxml-->
<view class="headBar">
  <view bindtap="getData" class="{{index==key?'active':''}}" wx:for="{{NavArr}}" data-index="{{index}}">{{item}}</view>
</view>

<view wx:if="{{key==0}}">
  <view class="questionList" wx:for="{{allQuestion}}">
    <view class="listTop">
      <text>免费</text>
      <text>{{item.content}}</text>
      <text bindtap="lookDetail" ata-id="{{item.id}}" data-orderStatus='{{item.status}}' data-look="true">查看详情</text>
    </view>
    <view class="listBottom">
      <text>{{questionType[item.topic]}}</text>
      <text bindtap="lookDetail" data-id="{{item.id}}" data-orderStatus='{{item.status}}'>{{item.status==1?'服务中':'已结束'}}</text>
    </view>
  </view>
</view>
<view wx:if="{{key==1}}">
  {{key}}
</view>
<view wx:if="{{key==2}}">
  {{key}}
</view>