/* pages/customer/wenshuDetail/wenshuDetail.wxss */

.content {
  padding: 10px;
}

.showimg {
  display: flex;
  flex-wrap: wrap;
}

.showimg image {
  width: 33%;
  height: 260rpx;
}

.date {
  font-size: 28rpx;
  margin-top: 10px;
  color: #999;
}

.fileName {
  border: 1px dotted #ccc;
  padding: 6px 10px;
}

.title2 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 20px;
  position: relative;
  text-indent: 15px;
}

.title2::after {
  content: '';
  height: 45%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 17px;
  background-color: #404040;
}