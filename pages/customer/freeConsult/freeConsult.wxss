/* pages/freeConsult/freeConsult.wxss */

.choose {
  padding: 10px 16px;
}

.topBar {
  width: 100%;
  display: flex;
  margin-top: 20px;
}

.pickerLeft {
  height: 60px;
  line-height: 60px;
  font-size: 18px;
  position: relative;
  margin-left: 10px;
}

.pickerLeft::after {
  content: '';
  position: absolute;
  left: -10px;
  top: 19px;
  width: 3px;
  height: 38%;
  background-color: #404040;
}

.pickerRight {
  width: 100%;
  line-height: 40px;
  height: 40px;
  text-indent: 14px;
  border: 1px solid #ccc;
  position: relative;
  color: #1e1e1e;
}

.pickerRight image {
  position: absolute;
  height: 25px;
  width: 20px;
  right: 4px;
  top: 7px;
}

.title {
  width: 100%;
  height: 70px;
  margin: auto;
  border: 1px solid #ccc;
  font-size: 15px;
  text-indent: 16px;
  padding: 6px 0;
}

.submitdata {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 56px;
  color: #fff;
  background-color: #46a5d8;
  text-align: center;
  line-height: 54px;
  font-size: 18px;
  letter-spacing: 4px;
}
