<!--pages/lawyer/AJquote/AJquote.wxml-->
<view class="content">
  <view class="title2">案件信息</view>
  <view class="contentlist">
    <text>申请人姓名：</text>
    <text>{{anjianData.extra_info.real_name}}</text>
  </view>
  <view class="contentlist">
    <text>案件类型：</text>
    <text>{{anjianData.extra_info.AJtype}}</text>
  </view>
  <view class="contentlist">
    <text>委托人在本案中的地位：</text>
    <text>{{anjianData.extra_info.DiWei}}</text>
  </view>
  <view class="contentlist">
    <text>案件所处阶段：</text>
    <text>{{anjianData.extra_info.JieDuan}}</text>
  </view>
  <view class="contentlist">
    <text>案件管辖地：</text>
    <text>{{anjianData.extra_info.GXdi[0]+'-'+anjianData.extra_info.GXdi[1]+'-'+anjianData.extra_info.GXdi[2]}}</text>
  </view>
  <view class="contentlist" wx:if="{{anjianData.extra_info.SJmoney==true}}">
    <text>案件涉及金额：</text>
    <text>{{anjianData.extra_info.ZYmoney}}</text>
  </view>
  <view class="contentlist">
    <text>案件详情：</text>
    <text>{{anjianData.extra_info.DetailTxt}}</text>
  </view>
  <view class="title2">以下律师可以为您服务</view>
  <view class="lawyer" wx:for="{{anjianData.bidders}}">
    <view class="lawyerL">
      <image src="{{item.lawyer.avatar_url||'/static/images/guwen.png'}}" />
    </view>
    <view class="lawyerC">
      <view class="name">{{item.lawyer.real_name||item.lawyer.nick_name}}</view>
      <view class="office">{{item.lawyer.extra_profile.office||'具化律师事务所'}}</view>
      <view class="forte">
        <text>擅长:</text>
        <text>上单，打野，adc</text>
      </view>
      <view class="centerB">
        <image src="/static/images/star.png" />
        <text class="grade">4.5</text>
        <text class="num">420个回答</text>
      </view>
    </view>
    <view class="lawyerR">
      <view class="tag">从业5年</view>
      <view>{{item.lawyer.extra_profile.location[0]+item.lawyer.extra_profile.location[1]}}</view>
      <view class="price">￥{{item.price}}.00</view>
      <view class="choose" data-lawyeropenid="{{item.lawyer.openid}}" bindtap="paymoney">选他</view>
    </view>
  </view>
</view>