/* pages/customer/wenshuDetail/wenshuDetail.wxss */

.content {
  padding: 10px;
}

.showimg {
  display: flex;
  flex-wrap: wrap;
}

.showimg image {
  width: 31%;
  height: 260rpx;
  margin-left: 2%;
}

.date {
  font-size: 28rpx;
  margin-top: 10px;
  color: #999;
}

.fileName {
  border: 1px dotted #ccc;
  padding: 6px 10px;
  margin-right: 10px;

}

.title2 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 20px;
  position: relative;
  text-indent: 15px;
}

.title2::after {
  content: '';
  height: 45%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 17px;
  background-color: #404040;
}

.contentlist text:nth-child(1) {
  font-size: 14px;
  color: #555;
}

.contentlist text:nth-child(2) {
  flex: 1;
}

.contentlist {
  color: #000;
  line-height: 32px;
  display: flex;
  padding: 5px 0;
}

.yaoqiu {
  height: 50px;
  line-height: 50px;
  display: flex;
}

.yaoqiu view {
  color: #000;
  padding: 0 8px;
  flex: 1;
  border-bottom: 1px solid #ccc;
}

.tools {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
}

.tools view {
  width: 100%;
  text-align: center;
  height: 50px;
  line-height: 50px;
}

.upload {
  background-color: #4b8bf4;
  color: #fff;
}

.shensu {
  background-color: #dd4f43;
  color: #fff;
}

.dialog-login {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 888;
}

.dialog-login .dialog-body {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
}

.topTool {
  display: flex;
  justify-content: space-between;
  padding: 0 10px;
}

.topTool image {
  height: 28px;
  width: 28px;
  padding: 5px;
}

.topTool view {
  line-height: 34px;
  margin-right: 8px;
  color: #1d65f7;
}

.dialog-login .dialog-body .title {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-login .dialog-body .content {
  width: 100%;
}

.dialog-login .dialog-body button {
  margin-top: 30rpx;
}

.questionInp2 {
  width: 90%;
  height: 100%;
  margin: auto;
  padding: 10px 0;
  text-indent: 8px;
  margin-bottom: 12px;
}
