.banner {
  width: 750rpx;
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}

.status {
  padding: 16px 10px;
  background-color: #fafafa;
}



.customerList {
  width: 84%;
  height: 50px;
  display: flex;
  padding: 16px 6%;
  margin: auto;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 5px;
  box-shadow: 1px 1px 5px #e2e2e2;
}

.customerList image {
  width: 58px;
  height: 56px;
}

.customerList view {
  margin-left: 10px;
}

.customerList .ListTitle {
  font-size: 18px;
}

.customerList .detailed {
  font-size: 14px;
  line-height: 24px;
  color: #9c9c9c;
}
.dialog-login {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-login .dialog-body {
  width: 540rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.dialog-login .dialog-body .title {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-login .dialog-body .content {
  width: 100%;
}

.dialog-login .dialog-body button {
  margin-top: 30rpx;
}
