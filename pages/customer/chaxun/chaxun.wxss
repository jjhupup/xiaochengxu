/* pages/customer/chaxun/chaxun.wxss */
.content{
  padding: 10px;
}
.gender{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-left: 10px;
}

.contentlist text:nth-child(1){
  font-size: 14px;
  color: #555;
}
.contentlist text:nth-child(2){
  flex: 1;
}
.contentlist{
  color: #000;
  line-height: 32px;
  display: flex;
  padding: 5px 0;
}
.title2 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 20px;
  position: relative;
  text-indent: 15px;
}

.title2::after {
  content: '';
  height: 45%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 17px;
  background-color: #404040;
}