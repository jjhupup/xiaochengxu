<!--pages/customer/mywenshu/mywenshu.wxml-->
<view class="headBar">
  <view bindtap="getData" wx:if="{{type==1}}" class="{{index==key?'active':''}}" wx:for="{{NavArr}}" data-index="{{index}}">{{item}}</view>
  <view bindtap="getData" wx:if="{{type==2}}" class="{{index==key?'active':''}}" wx:for="{{NavArr2}}" data-index="{{index}}">{{item}}</view>
  <view bindtap="getData" wx:if="{{type==3}}" class="{{index==key?'active':''}}" wx:for="{{NavArr3}}" data-index="{{index}}">{{item}}</view>
</view>
<view wx:if="{{key==0}}">
<!-- 文书 -->
  <view class='item card' wx:if="{{type==1}}" wx:for="{{allWenshu}}" hover-class='hover-class' data-questionId="{{item.id}}" data-orderstatus='{{item.status}}' catchtap='lookDetail'>
    <view class='header'>
      <view class='name' data-item='{{item}}'>
        <image class='avatar' mode='aspectFill' src='{{item.publisher.avatar_url || "/static/images/default_avatar.png"}}' />
        <view>{{item.publisher.nick_name||item.publisher.real_name}}</view>
      </view>
      <view class='type'>{{questionType[item.topic]}}</view>
    </view>
    <view class='content'>
      <view class='text'>
        <view class='title'>{{item.extra_info.textType}}</view>
        <view class='desc'>{{item.extra_info.description}}</view>
      </view>
    </view>
    <view class='footer'>
      <view class='label'>
        <image src='/static/images/ajweituo.png'></image>
        <view class="number">{{item.bidders.length}}报价</view>
      </view>
    </view>
  </view>
  <!-- 案件 -->
  <view class='item card' wx:if="{{type==2}}" wx:for="{{allAnjian}}" hover-class='hover-class' data-questionId="{{item.id}}" data-orderstatus='{{item.status}}' catchtap='lookDetail'>
    <view class='header'>
      <view class='name' data-item='{{item}}'>
        <image class='avatar' mode='aspectFill' src='{{item.publisher.avatar_url || "/static/images/default_avatar.png"}}' />
        <view>{{item.publisher.nick_name||item.publisher.real_name}}</view>
      </view>
      <view class='type'>{{item.extra_info.AJtype}}</view>
    </view>
    <view class='content'>
      <view class='text'>
        <!-- <view class='title'>{{item.extra_info.textType}}</view> -->
        <view class='title'>{{item.extra_info.DetailTxt}}</view>
      </view>
    </view>
    <view class='footer'>
      <view class='label'>
        <image src='/static/images/ajweituo.png'></image>
        <view class="number">{{item.bidders.length}}报价</view>
      </view>
    </view>
  </view>
  <!-- 顾问 -->
  <view class='item card' wx:if="{{type==3}}" wx:for="{{allGuwen}}" hover-class='hover-class' data-questionId="{{item.id}}" data-orderstatus='{{item.status}}' catchtap='lookDetail'>
    <view class='header'>
      <view class='name' data-item='{{item}}'>
        <image class='avatar' mode='aspectFill' src='{{item.publisher.avatar_url || "/static/images/default_avatar.png"}}' />
        <view>{{item.publisher.nick_name||item.publisher.real_name}}</view>
      </view>
      <view class='type'>{{item.extra_info.adviserType}}</view>
    </view>
    <view class='content'>
      <view class='text'>
        <!-- <view class='title'>{{item.extra_info.textType}}</view> -->
        <view class='title'>{{item.extra_info.describe}}</view>
      </view>
    </view>
    <view class='footer'>
      <view class='label'>
        <image src='/static/images/ajweituo.png'></image>
        <view class="number">{{item.bidders.length}}报价</view>
      </view>
    </view>
  </view>
</view>
<view wx:if="{{key==1}}">
  <view class="questionList">
    <view class="listTop">
      <text>请问疫情期间公司进行裁员，公要搞大司...</text>
      <text bindtap="lookDetail" data-look="true" data-OrderStatus="1">查看详情</text>
    </view>
    <view class="listBottom">
      <text>代写诉状</text>
      <text bindtap="lookDetail" data-OrderStatus="1">待处理</text>
    </view>
  </view>
  <view class='item card' wx:for="{{allQuestion}}" hover-class='hover-class' data-questionId="{{item.id}}" data-orderstatus='{{item.status}}' catchtap='lookDetail'>
    <view class='header'>
      <view class='name' data-item='{{item}}'>
        <image class='avatar' mode='aspectFill' src='{{item.advicer.avatar_url || "/static/images/default_avatar.png"}}' />
        <view>{{item.advicer.nick_name||'某个吉尔'}}</view>
      </view>
      <view class='type'>{{questionType[item.topic]}}</view>
    </view>
    <view class='content'>
      <view class='text'>
        <view class='title'>{{item.title||'这是一个标题'}}</view>
        <view class='desc'>{{item.content}}</view>
      </view>
      <image mode='aspectFill' class='img' src='{{item.screenshot}}' wx:if='{{item.screenshot}}'></image>
    </view>
    <view class='footer'>
      <view class='label'>
        <image src='/static/images/comment.png'></image>
        <view class="number">{{item.replies.length}}回答</view>
      </view>
    </view>
  </view>
</view>
<view wx:if="{{key==2}}">
  {{key}}
</view>
<view wx:if="{{key==3}}">
  {{key}}
</view>
<view wx:if="{{key==4}}">
  {{key}}
</view>