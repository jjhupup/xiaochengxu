.conetnt {
  padding: 10px;
}

.title2 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 20px;
  position: relative;
  text-indent: 15px;
}

.title2::after {
  content: '';
  height: 45%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 17px;
  background-color: #404040;
}

.yaoqiu {
  height: 50px;
  line-height: 50px;
  display: flex;
}

.yaoqiu view {
  color: #000;
  padding: 0 8px;
  flex: 1;
  border-bottom: 1px solid #ccc;
}
.baojia{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
  border-right-color: #fff;
}
.baojia input{
  width: 52%;
  height: 48px;
  line-height: 50px;
  border: 1px solid #dfdfdf;
  padding-left: 10px;
  margin: 0 2%
}
.baojia view{
  width: 40%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #fff;
  background-color: #5677fc;
}