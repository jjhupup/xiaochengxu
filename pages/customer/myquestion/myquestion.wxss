/* pages/customer/myquestion/myquestion.wxss */

page{
  background-color: #f5f5f5;
}
.headBar {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.headBar view {
  width: 33.3%;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 80rpx;
  text-align: center;
  line-height: 76rpx;
}

.active {
  color: #43c1ad;
  position:relative;
}

.active::after {
  content: "";
  position: absolute;
  width: 60%;
  height: 2px;
  background-color: #43c1ad;
  bottom: 0;
  left: 20%;
}

.content .title {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item {
  padding: 0 30rpx;
  margin-bottom: 14rpx;
  box-sizing: border-box;
  background: #fff;
  margin-top: 10px;
  box-shadow: 8px 4px 8px #ddd;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  color: #abb4bf;
}

.name {
  display: flex;
  align-items: center;
  color: #333;
}

.header .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .text {
  flex: 1;
}

.content .img {
  width: 130rpx;
  height: 130rpx;
  margin-left: 20rpx;
}

.content .title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.content .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #abb4bf;
}

.label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #abb4bf;
  margin-right: 40rpx;
}

.label image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-top: 3px;
}

.footer {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.hover-class, .navigator-hover {
  background: #f2f2f2 !important;
}
