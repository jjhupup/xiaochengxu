<!--pages/lawyer/mydayi/mydayi.wxml-->
<view class="headBar">
  <view bindtap="getData" class="{{index==key?'active':''}}" wx:for="{{NavArr}}" data-index="{{index}}">{{item}}</view>
</view>
<view wx:if="{{key==0}}">
  <view class="questionList" wx:for="{{questionArr}}">
    <view class="listLeft">
      <text>{{item.content}}</text>
    </view>
    <view class="listRight">
      <text>{{questionType[item.topic]}}</text>
      <text bindtap="lookDetail">继续解答</text>
    </view>
  </view>
</view>
<view wx:if="{{key==1}}">
  {{key}}
</view>