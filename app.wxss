.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.titleMini {
  line-height: 40px;
  font-size: 36rpx;
  margin-top: 10px;
  position: relative;
}

.title1 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 22px;
  position: relative;
  text-indent: 15px;
}

.title1::after {
  content: '';
  height: 50%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 15px;
  background-color: #404040;
}

