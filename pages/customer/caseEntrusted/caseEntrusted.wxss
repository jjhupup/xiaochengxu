/* pages/caseEntrusted/caseEntrusted.wxss */

.content {
  padding: 5px 10px;
}

.anjian1 {
  width: 94%;
  height: 45px;
  text-indent: 5%;
  line-height: 42px;
  float: left;
  border-bottom: 1px solid #ccc;
  box-sizing: border-box;
  margin: 4px 2%;
}

.picker {
  width: 100%;
  position: relative;
}

.picker text {
  position: absolute;
  height: 45px;
  width: 42px;
  right: 4px;
  top: 0px;
  color: #5677fc;
  line-height: 45px;
}

.getmoney1 {
  position: relative;
}

.getmoney1 text {
  position: absolute;
  right: 16px;
  top: 0;
  height: 45px;
  line-height: 45px;
}

.paymoney {
  width: 58%;
  height: 45px;
  line-height: 45px;
  border: 1px solid #ccc;
}

.pay {
  display: flex;
}

.pay text {
  width: 40%;
  height: 45px;
  line-height: 45px;
  background-color: #5677fc;
  border: 1px solid #7fc9ee;
  color: #fff;
  border-radius: 4px;
  margin-left: 2px;
  text-align: center;
}

.kuang_weba {
  width: 90% !important;
  height: 45px;
  text-align: center;
  color: #fff;
  margin: 20px auto 40px;
  border-radius: 6px;
  line-height: 45px;
  background-color: #5677fc;
  padding: 0;
}
