.listTop text:nth-child(1) {
  padding-left: 16rpx;
  height: 40rpx;
  line-height: 40rpx;
  flex: 1;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.listTop text:nth-child(2) {
  float: right;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #5677FC;
}

.listBottom {
  height: 40%;
  display: flex;
  justify-content: space-between;
}

.listBottom text:nth-child(1) {
  width: 130rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
  background-color: #5677FC;
}

.listBottom text:nth-child(2) {
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  border-radius: 6rpx;
  background-color: #83d944;
}

.listBottom .over {
  color: #999 !important;
  border: 1px solid #999 !important;
  background-color: #fff !important;
}
