/* pages/my/my.wxss */

page {
  background-color: #fafafa;
}

.userData {
  width: 80%;
  height: 90px;
  /* background-color: #99c3f2;*/
  background-color: #8cdcfe;
  display: flex;
  padding: 20px 10%;
}

.userData image {
  width: 65px;
  height: 65px;
  border: 1px solid #fff;
  border-radius: 50%;
  background-color: #fff;
}

.userData .userName {
  height: 60px;
  line-height: 60px;
  text-indent: 10px;
  font-size: 18px;
  color: #fff;
}

.userData button {
  width: 65px;
  height: 65px;
  border-radius: 50%;
  background-color: transparent;
  position: absolute;
  top: 20px;
  left: 10%;
}

.title {
  line-height: 40px;
  height: 40px;
  margin-top: 10px;
  background-color: #fff;
  text-indent: 20px;
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  left: 10px;
  top: 10px;
  width: 4px;
  height: 50%;
  background-color: #467cfd;
}

.allList {
  width: 33.3%;
  height: 100px;
  border: 1px solid #e3e3e3;
  padding: 20px 0;
  box-sizing: border-box;
  position: relative;
}

.allList:nth-child(2), .allList:nth-child(5) {
  border-left: none;
  border-right: none;
}

.allList:nth-child(n+4) {
  border-top: none;
}

.allList .img1 {
  width: 32px;
  height: 32px;
  display: block;
  margin: auto;
}

.allList .img2 {
  width: 25px;
  height: 25px;
  position: absolute;
  top: 15px;
  left: 78%;
}

.list {
  display: flex;
  flex-wrap: wrap;
}

.content {
  text-align: center;
  font-size: 16px;
  line-height: 24px;
  color: #333;
}

.text {
  text-align: center;
  line-height: 31px;
}

.allList .num {
  position: absolute;
  top: 18px;
  left: 80%;
  width: 20px;
  height: 20px;
  font-size: 10px;
  background-color: #ff3b30;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 20px;
}
.dialog-status {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-status .dialog-body {
  width: 540rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.dialog-status .dialog-body .dialogtitle {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-status .dialog-body .content {
  width: 100%;
}

.dialog-status .dialog-body button {
  margin-top: 30rpx;
}
