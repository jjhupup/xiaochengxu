/* pages/lawyer/myOrderDetail/myOrderDetail.wxss */

.content {
  padding: 10px;
}

.showimg {
  display: flex;
  flex-wrap: wrap;
}

.showimg image {
  width: 33%;
  height: 260rpx;
}

.date {
  font-size: 28rpx;
  margin-top: 10px;
  color: #999;
}

.fileName {
  border: 1px dotted #ccc;
  padding: 6px 10px;
}

.title2 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 20px;
  position: relative;
  text-indent: 15px;
}

.title2::after {
  content: '';
  height: 45%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 17px;
  background-color: #404040;
}
.contentlist text:nth-child(1) {
  font-size: 14px;
  color: #555;
}

.contentlist text:nth-child(2) {
  flex: 1;
}

.contentlist {
  color: #000;
  line-height: 32px;
  display: flex;
  padding: 5px 0;
}
.yaoqiu {
  height: 50px;
  line-height: 50px;
  display: flex;
}

.yaoqiu view {
  color: #000;
  padding: 0 8px;
  flex: 1;
  border-bottom: 1px solid #ccc;
}
.baojia{
  color: red;
}
.mybidder{
  height: 36px;
  line-height: 36px;
}