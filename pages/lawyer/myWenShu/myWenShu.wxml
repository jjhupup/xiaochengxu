<!--pages/lawyer/myWenShu/myWenShu.wxml-->
<wxs module="dateFr" src="../../../filter/utils.wxs"></wxs>
<view class="headBar">
  <scroll-view scroll-x="true">
    <view class="tabnav">
      <view bindtap="getDatalist" class="topitem {{index==key?'active':''}}" wx:for="{{NavArr}}" data-index="{{index}}">{{item}}</view>
    </view>
  </scroll-view>
</view>
<view>
  <!-- 文书 -->
  <view class='item card' wx:for="{{key==0?dateFr.PendingOrder(allWenshu,key):dateFr.PendingOrder(allWenshu,key+1)}}"  hover-class='hover-class' data-questionId="{{item.id}}" data-orderstatus='{{item.status}}' catchtap='lookDetail'>
    <view class='content'>
      <view class='text'>
        <view class='title'>{{item.extra_info.textType}}</view>
        <view class='desc'>{{item.extra_info.description}}</view>
      </view>
    </view>
    <view class='footer'>
      <view class='label'>
        <image src='/static/images/ajweituo.png'></image>
        <view class="number">{{item.bidders.length}}报价</view>
      </view>
    </view>
  </view>
</view>
<view wx:if="{{key==0}}">
    <view class="showErr" wx:if="{{dateFr.PendingOrder(allWenshu,key).length==0}}">
      <image src="/static/images/chaxunErr.png" />
      <view>暂无数据</view>
    </view>
  </view>
  <view wx:if="{{key!=0}}">
    <view class="showErr" wx:if="{{dateFr.PendingOrder(allWenshu,key+1).length==0}}">
      <image src="/static/images/chaxunErr.png" />
      <view>暂无数据</view>
    </view>
  </view>