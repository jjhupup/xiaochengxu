/* pages/my/my.wxss */

page {
  background-color: #fafafa;
}

.userData {
  width: 86%;
  height: 90px;
  background-color: #fff;
  display: flex;
  padding: 10px 4% 10px 10%;
  margin-top: 12px;
  align-items: center;
  position: relative;
}

.userData image {
  width: 65px;
  height: 65px;
}

.userData .userName {
  height: 60px;
  line-height: 60px;
  text-indent: 10px;
  font-size: 18px;
  color: #000;
}

.userData button {
  width: 65px;
  height: 65px;
  border-radius: 50%;
  background-color: transparent;
  position: absolute;
  top: 20px;
  left: 10%;
}

.toright {
  flex: 1;
  height: 100%;
}

.toright .goshezhi {
  height: 100%;
  width: 30%;
  float: right;
}

.toright image {
  float: right;
  width: 26px;
  height: 26px;
  margin-top: 30px;
}

.myAbility {
  background-color: #fff;
  margin-top: 12px;
}

.title {
  line-height: 40px;
  height: 40px;
  margin-top: 10px;
  background-color: #fff;
  text-indent: 20px;
  position: relative;
}

.title::after {
  content: '';
  position: absolute;
  left: 10px;
  top: 10px;
  width: 4px;
  height: 50%;
  background-color: #467cfd;
}

.allList {
  width: 95%;
  height: 50px;
  padding-left: 10px;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
  position: relative;
  display: flex;
  margin: auto;
}

.allList:nth-child(2), .allList:nth-child(5) {
  border-left: none;
  border-right: none;
}

.allList:nth-child(n+4) {
  border-top: none;
}

.allList .img1 {
  width: 24px;
  height: 24px;
  margin-top: 12px;
}

.allList .img2 {
  width: 25px;
  height: 25px;
  position: absolute;
  top: 15px;
  left: 78%;
}

.list {
  display: flex;
  flex-wrap: wrap;
}

.content {
  text-align: center;
  font-size: 16px;
  line-height: 24px;
  color: #333;
}

.text {
  text-align: center;
  line-height: 50px;
  padding-left: 20px;
  font-size: 15px;
}

.allList .num {
  position: absolute;
  top: 18px;
  left: 80%;
  width: 20px;
  height: 20px;
  font-size: 10px;
  background-color: #ff3b30;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 20px;
}

.dialog-status {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-status .dialog-body {
  width: 540rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5px;
  padding: 40rpx;
}

.dialog-status .dialog-body .dialogtitle {
  width: 100%;
  text-align: center;
  line-height: 60rpx;
}

.dialog-status .dialog-body .content {
  width: 100%;
}

.dialog-status .dialog-body button {
  margin-top: 30rpx;
}

.order {
  background-color: #fff;
  margin-top: 12px;
}
