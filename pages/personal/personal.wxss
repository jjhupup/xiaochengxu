/* pages/personal/personal.wxss */
page{
  background-color: #f3f3f3;
}
.content{
  padding: 10px;
}
.content image{
  width: 120px;
  height: 120px;
  border-radius: 50%;
  margin-top: -60px;
}
.top{
  width: 100%;
  height: 186px;
  /* border: 1px solid #aaa; */
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-top: 55px;
}
.name{
  font-size: 20px;
  line-height: 32px;
}
.dizi{
  font: 16px;
  color: #666;
}
.dizi text{
  margin: 10px;
  line-height: 32px;
}
.desc{
  display: flex;
  width: 94%;
  height: 54px;
  margin: auto;
  border-top: 1px solid #f3f3f3;
}
.desc>view{
  width: 50%;
  height: 54px;
  text-align: center;
  position: relative;
}
.desc>view::after{
  content: '';
  position: absolute;
  top: 13px;
  right: 0px;
  width: 1px;
  height: 50%;
  background-color: #eee;
}
.desc text{
  display: block;
  height: 50%;
  font-size: 14px;
}
.desc text:nth-child(1){
  line-height: 36px;
  color: #333;
}
.desc text:nth-child(2){
  line-height: 20px;
  color: #aaa;
}
.lsdangan{
  background-color: #fff;
  width: 100%;
  margin-top: 20px;
}
.title2{
  font-size: 18px;
  line-height: 40px;

  padding-left: 10px;
}
.datalist{
  display: flex;
}
.ltitle{
  font-size: 15px;
  color: #aaa;
  width: 22%;
  padding-left: 10px;
  line-height: 28px;
}
.rcontent{
  flex: 1;
  display:  flex;
  flex-wrap: wrap;
}
.rcontent view{
  padding: 3px 7px;
  margin: 2px 4px;
  background-color: #efefef;
  color: #000;
  text-align: center;
  border-radius: 30px;
}
.r{
  flex: 1;
  font-size: 15px;
  line-height: 28px;
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.Rzheng{
  display: flex;
  background-color: #fff;
  line-height: 36px;
  margin-bottom: 72px;
}
.Rzheng>view{
  padding-left: 12px;
  font-size: 14px;
  color: #aaa;
}
.Rzheng icon{
  vertical-align: middle;
  margin-right: 4px;
  margin-top: 16px;
}
.down {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 56px;
}

.down .money {
  width: 50%;
  background-color: #fff;
  text-align: center;
  line-height: 56px;
  color: #101010;
}

.down .money text:nth-child(2) {
  color: #445cfb;
}


.paybtn {
  background-color: #445cfb;
  width: 50%;
  line-height: 56px;
  color: #fff;
  text-align: center;
  font-size: 17px;
}
.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.shade .paymothed {
  height: 210px;
  background-color: #fff;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.paymothedtxt {
  font-size: 14px;
  color: #afafaf;
  text-align: center;
  line-height: 36px;
}

.paymothed .money {
  width: 100%;
  text-align: center;
  line-height: 42px;
  color: #000;
  font-size: 18px;
  border-bottom: 1px solid #eee;
}

.weixin {
  display: flex;
  justify-content: center;
  padding: 10px 28px;
  margin-bottom: 18px;
}

.weixin text {
  flex: 1;
  text-indent: 18px;
  line-height: 28px;
}

.weixin image {
  width: 32px;
  height: 32px;
}

.weixin .gou {
  width: 26px;
  height: 26px;
}
.gopay{
  width: 90%;
  height: 50px;
  background-color: #445cfb;
  line-height: 50px;
  text-align: center;
  border-radius: 6px;
  color: #fff;
  margin: auto;
  font-size: 18px;
}
