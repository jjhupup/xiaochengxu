.headBar {
  display: flex;
  background-color: #fff;
}

.headBar view {
  width: 25%;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx;
}

.active {
  color: #5677FC;
  position: relative;
}

.active::after {
  content: "";
  position: absolute;
  width: 60%;
  height: 2px;
  background-color: #5677FC;
  bottom: 0;
  left: 20%;
}

.questionList {
  background-color: #fff;
  padding: 0 10px;
  height: 180rpx;
  border-bottom: 1px solid #eee;
}

.questionList .listTop {
  height: 40%;
  display: flex;
  padding-top: 30rpx;
}

