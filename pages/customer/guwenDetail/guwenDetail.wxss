/* pages/lawyer/guwen/guwen.wxss */

.conetnt {
  padding: 10px;
}

.title2 {
  display: block;
  height: 60px;
  line-height: 60px;
  font-size: 20px;
  position: relative;
  text-indent: 15px;
}

.title2::after {
  content: '';
  height: 45%;
  width: 6px;
  position: absolute;
  left: 0;
  top: 17px;
  background-color: #404040;
}

.yaoqiu {
  height: 50px;
  line-height: 50px;
  display: flex;
}

.yaoqiu view {
  color: #000;
  padding: 0 8px;
  flex: 1;
  border-bottom: 1px solid #ccc;
}
.baojia{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
  border-right-color: #fff;
}
.baojia input{
  width: 52%;
  height: 48px;
  line-height: 50px;
  border: 1px solid #dfdfdf;
  padding-left: 10px;
  margin: 0 2%
}
.baojia view{
  width: 40%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #fff;
  background-color: #5677fc;
}
.lawyer {
  display: flex;
  height: 140px;
  margin-bottom: 16px;
  box-shadow: 2px 2px 6px #cecece;
}

.lawyerL {
  width: 23%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.lawyerL image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 12px;
}

.lawyerL view {
  text-indent: 12px;
}

.lawyerC {
  flex: 1;
  padding: 10px 0;
  padding-left: 10px;
}

.price {
  color: #ff3b30 !important;
}

.lawyerC view {
  font-size: 28rpx;
  line-height: 28px;
  color: #010101;
}

.lawyerC .office {
  line-height: 24px;
  text-indent: 2px;
}

.lawyerC .forte {
  color: #999;
  font-size: 12px;
  text-indent: 3px;
}

.lawyerC .centerB {
  font-size: 12px;
}

.lawyerC .centerB image {
  width: 12px;
  height: 12px;
  vertical-align: middle;
}

.lawyerC .grade {
  color: #ff9800;
}

.lawyerC .num {
  color: #888;
  font-size: 13px;
  margin-left: 14px;
}

.lawyerR {
  width: 25%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 6px;
}

.lawyerR view {
  font-size: 28rpx;
  line-height: 30px;
  color: #666;
}

.lawyer .tag {
  border: 1px solid #28b8a1;
  height: 24px;
  color: #28b8a1;
  line-height: 24px;
  text-align: center;
  padding: 0 6px;
  border-radius: 16px;
}

.lawyerR .choose {
  border: 1px solid #afd196;
  background: #1aad19;
  color: #fff;
  border-radius: 4px;
}
