/* pages/freeConsult/freeConsult.wxss */

.topBar {
  width: 100%;
  display: flex;
  margin-top: 20px;
}

.picker {
  display: flex;
  padding: 10px 16px;
}

.pickerLeft {
  height: 36px;
  line-height: 36px;
  font-size: 18px;
}

.pickerRight {
  width: 150px;
  line-height: 36px;
  height: 36px;
  text-indent: 14px;
  border: 1px solid #0057ff;
  border-radius: 4px;
  position: relative;
  color: #1e1e1e;
}

.pickerRight image {
  position: absolute;
  height: 26px;
  width: 20px;
  right: 4px;
  top: 4px;
}

